{
  "name": "Golang Dev Container",
  "image": "mcr.microsoft.com/devcontainers/go:1",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode"
